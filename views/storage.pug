html
    head
        style
            include ../styles/storage.css
            include ../styles/collapsible.css
            include ../styles/table.css
        title Lager
        script(defer, src="/static/javascript/script.js")
        h1.headlineTop Dummy-smeden lager
    body
        div.div1
            div.item1
                h2 Blueprints
                div.collapsible
                    button.collapsibleButton(type='submit') Opret
                    div.content
                        include createBlueprint.pug
                    button.collapsibleButton(type='submit') Opdater
                    div.content
                        include updateBlueprint.pug
                    button.collapsibleButton(type='submit') Slet
                    div.content
                        include deleteBlueprint.pug

                    h2 Lagerbeholdning
                        table
                            tr
                                th.headerName Navn
                                th.headerAmount Antal
                            each blueprint in blueprints
                                tr
                                    td.name #{blueprint.name}
                                    td.amount #{blueprint.amount}
                                tr.hidden
                                    td.content Minimumsantal på lager før der gives notifikation: #{blueprint.storageMin}

            div.item2
                h2 Komponenter
                div.collapsible
                    button.collapsibleButton(type='submit') Opret
                    div.content
                        include createComp.pug
                    button.collapsibleButton(type='submit') Opdater
                    div.content
                        include updateComp.pug
                    button.collapsibleButton(type='submit') Slet
                    div.content
                        include deleteComp.pug

                    h2 Lagerbeholdning
                        table
                            tr
                                th.headerName Navn
                                th.headerAmount Antal
                            each component in components
                                tr
                                    td.name #{component.name}
                                    td.amount #{component.amount}
                                tr.hidden
                                    td.content Minimumsantal på lager før der gives notifikation: #{component.storageMin}
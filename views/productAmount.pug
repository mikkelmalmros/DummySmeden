html
    head
        style
            include ../styles/addAmount.css
        script(defer, src="/static/javascript/script.js")
        title Tilf√∏j antal til products
    body

        form(action='/product/amount' method='post')
                    input(type="hidden" name="mainProductName"  value=mainProductName)
                    input(type="hidden" name="mainProductAmount"  value=amount)
                    input(type="hidden" name="mainProductNote"  value=note)
                    h2 Blueprints
                    each blueprint in blueprints
                        label #{blueprint.name}
                        br
                        input(type="hidden" name="hiddenBlueprint:"+blueprint._id value=blueprint._id)
                        input(type='text' name=blueprint._id placeholder='Antal')
                        br
                        br
                    br
                    button.submitButton(type='submit' name='create' onclick= 'disableButtons()') Opret produkt
                    br
                    br